{
  "name": "node-express-template-typescript",
  "version": "1.0.0",
  "description": "Node-js Express Template",
  "main": "built/index.js",
  "scripts": {
    "bw": "./node_modules/.bin/tsc-watch",
    "heroku-start": "node built/index.js",
    "dev": "yarn && yarn bw --onSuccess \"nodemon built/index.js\"",
    "start": "node built/index.js",
    "build": "tsc",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write --check src"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/cozyrimz"
  },
  "keywords": [
    "fantasy",
    "statistics",
    "scraping"
  ],
  "author": "Sarim R Shah",
  "license": "MIT",
  "dependencies": {
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "cron": "^1.8.2",
    "date-fns": "^2.17.0",
    "dotenv": "^8.2.0",
    "eslint": "^7.32.0",
    "express": "^4.17.1",
    "formidable": "v3",
    "joi": "^17.4.0",
    "jsonwebtoken": "^8.5.1",
    "method-override": "^3.0.0",
    "mime": "^2.5.2",
    "mongoose": "^6.1.4",
    "morgan": "^1.10.0",
    "node-cache": "^5.1.2",
    "node-cron": "^3.0.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.10",
    "@types/express": "^4.17.11",
    "@types/jest": "^27.0.2",
    "@types/jsonwebtoken": "^8.5.4",
    "@types/morgan": "^1.9.2",
    "@types/node": "^16.10.1",
    "@typescript-eslint/eslint-plugin": "^4.32.0",
    "@typescript-eslint/parser": "^4.31.1",
    "eslint": "^7.32.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.1.0",
    "husky": "4.3.8",
    "lint-staged": "^11.1.2",
    "nodemon": "^2.0.7",
    "prettier": "^2.4.1",
    "tsc-watch": "^4.4.0",
    "typescript": "^4.4.3"
  },
  "engines": {
    "node": "16.x"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "npm run format",
      "npm run lint"
    ],
    "*.md": [
      "npm run format"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
