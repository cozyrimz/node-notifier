{
  "name": "node-notifier-typescript",
  "version": "1.0.0",
  "description": "Node-js Notifier",
  "main": "built/index.js",
  "scripts": {
    "bw": "./node_modules/.bin/tsc-watch",
    "heroku-start": "node built/index.js",
    "dev": "yarn && yarn bw --onSuccess \"nodemon built/index.js\"",
    "start": "node built/index.js",
    "build": "tsc",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write --check src"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/cozyrimz"
  },
  "keywords": [
    "scraping"
  ],
  "author": "Sarim R Shah",
  "license": "MIT",
  "dependencies": {
    "body-parser": "^1.20.0",
    "cors": "^2.8.5",
    "cron": "^2.3.1",
    "date-fns": "^2.30.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "formidable": "v3",
    "joi": "^17.9.2",
    "jsonwebtoken": "^9.0.0",
    "method-override": "^3.0.0",
    "mime": "^3.0.0",
    "mongoose": "^7.3.0",
    "morgan": "^1.10.0",
    "node-cache": "^5.1.2",
    "node-cron": "^3.0.2",
    "nodemailer": "^6.9.3",
    "playwright": "^1.35.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/morgan": "^1.9.4",
    "@types/node": "^20.3.1",
    "@typescript-eslint/eslint-plugin": "^5.59.11",
    "@typescript-eslint/parser": "^5.59.11",
    "eslint": "^8.42.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-n": "^16.0.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "husky": "4.3.8",
    "lint-staged": "^13.2.2",
    "nodemon": "^2.0.22",
    "prettier": "^2.8.8",
    "tsc-watch": "^6.0.4",
    "typescript": "^5.1.3"
  },
  "engines": {
    "node": "18.x"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "npm run format",
      "npm run lint"
    ],
    "*.md": [
      "npm run format"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
