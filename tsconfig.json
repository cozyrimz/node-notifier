{
  "compilerOptions": {
    "module": "commonjs",
    "allowJs": true,
    "checkJs": false,
    "moduleResolution": "node",
    "downlevelIteration": true,
    "esModuleInterop": true,
    "pretty": true,
    "sourceMap": true,
    "lib": ["esnext"],
    "target": "es6",
    "resolveJsonModule": true,
    "outDir": "./built",
    "rootDir": "./src",
    "noImplicitAny": false
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"],
  "typeRoots": ["node_modules/@types"]
}
